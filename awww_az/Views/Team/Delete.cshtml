@model awww_az.Models.Team

@{
    ViewData["Title"] = "Delete Team";
}

<div class="container">
    <h1 class="mb-4">Delete Team</h1>

    <div class="alert alert-danger">
        <h4 class="alert-heading">Warning!</h4>
        <p>Are you sure you want to delete this team?</p>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h4>Team Information</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.City)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.City)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FoundingDate)</dt>
                <dd class="col-sm-9">@Model.FoundingDate.ToShortDateString()</dd>

                <dt class="col-sm-3">League</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.League.Name)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
    </form>
</div>