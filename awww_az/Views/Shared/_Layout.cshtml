@{
    <!DOCTYPE html>
    <html lang="pl">

    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/student-styles.css" asp-append-version="true" />

    </head>

    <body>
        <header>
            <nav>
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Student" asp-action="Index">Studenci</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Admin" asp-action="Index">Dodaj dane</a>
                    </li>
                    <!-- Alternative navigation without dropdowns -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Team" asp-action="Index">Teams</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Player" asp-action="Index">Players</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="League" asp-action="Index">Leagues</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Position" asp-action="Index">Positions</a>
                    </li>
                </ul>
            </nav>
        </header>

        <main>
            @RenderBody()
        </main>

        <footer>
            &copy; 2025
        </footer>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)

    </body>

    </html>
}
