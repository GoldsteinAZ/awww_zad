@model IEnumerable<awww_az.Models.Student>

@{
    ViewData["Title"] = "Lista studentów";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@student.Id">Szczegóły</a>
                </td>
            </tr>
        }
    </tbody>
</table>